<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_adapter_naam_a"
        android:layout_width="239dp"
        android:layout_height="24dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="naam attractie"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="@id/ondertitel"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_adapter_foto_a"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_adapter_foto_a"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_margin="4dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:elevation="11dp"
        android:overScrollMode="always"
        android:scaleType="fitXY"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/meetMijAchtergrond" />
</android.support.constraint.ConstraintLayout>