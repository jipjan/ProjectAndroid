<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.experience.essteling.a3.esstelingexperience">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Menu"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MeetMij"
        android:theme="@style/AppTheme"/>

        <activity android:name=".MeetMijLijst"
            android:parentActivityName=".Menu"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.experience.essteling.a3.esstelingexperience.Menu" />
        </activity>
        <activity android:name=".DataAttractieLijst"
            android:theme="@style/AppTheme"/>
        <activity android:name=".AttractieMetingSpec"
            android:theme="@style/AppTheme"/>
        <activity android:name=".MetingenLijst"
            android:parentActivityName=".Menu"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.experience.essteling.a3.esstelingexperience.Menu" />
        </activity>

    </application>

</manifest>