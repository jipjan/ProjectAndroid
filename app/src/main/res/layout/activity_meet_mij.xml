<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafaf7"
    tools:context="com.experience.essteling.a3.esstelingexperience.UI.MeetMij">

    <TextView
        android:id="@+id/tv_meet_mij_meetmij"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily=""
        android:text="@string/Meetmij"
        android:textColor="@color/Rood"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/background1_meetmij"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235" />

    <TextView
        android:id="@+id/tv_meet_mij_attractie"
        android:layout_width="213dp"
        android:layout_height="37dp"
        android:layout_marginTop="9dp"
        android:text="@string/NaamAttractie"
        android:textColor="@id/titel1"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.306"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_meet_mij_meetmij" />

    <TextView
        android:id="@+id/tv_meet_mij_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Wacht..."
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_meet_mij_attractie" />

    <ImageView
        android:id="@+id/background3_meetmij"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/railsje"
        app:layout_constraintTop_toBottomOf="@+id/background1_meetmij"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.482" />

    <ImageView
        android:id="@+id/background2_meetmij"
        android:layout_width="220dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/karratjerechts"
        app:layout_constraintTop_toTopOf="@+id/background1_meetmij"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/background1_meetmij"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/background1_meetmij"
        app:layout_constraintBottom_toBottomOf="@+id/background1_meetmij"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:id="@+id/background1_meetmij"
        android:layout_width="220dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/karratjerechts"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_meet_mij_status"
        app:layout_constraintVertical_bias="0.37" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/background3_meetmij">
    <Button
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/btn_meet_mij_start"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:background="@color/Rood"
        android:text="@string/Start"
        android:textColor="@android:color/white" />


    <Button
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/btn_meet_mij_stop"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:background="@color/Rood"
        android:text="@string/Stop"
        android:textColor="@android:color/white"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
