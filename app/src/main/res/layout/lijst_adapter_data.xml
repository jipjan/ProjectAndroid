<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:datacardview="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/datacardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    datacardview:cardCornerRadius="4dp"
    android:layout_margin="5dp">
<android.support.constraint.ConstraintLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp">


    <TextView
        android:id="@+id/data_hoogte_max"
        android:layout_width="133dp"
        android:layout_height="17dp"
        android:text="hoogte max"
        datacardview:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        datacardview:layout_constraintTop_toBottomOf="@+id/aantal" />

    <TextView
        android:id="@+id/data_hoogte_gemiddeld"
        android:layout_width="133dp"
        android:layout_height="16dp"
        android:text="gemiddelde hoogte"
        datacardview:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        datacardview:layout_constraintTop_toBottomOf="@+id/data_hoogte_max" />

    <TextView
        android:id="@+id/data_snelheid_gemiddelde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gemiddelde Snelheid"
        android:layout_marginTop="8dp"
        datacardview:layout_constraintTop_toBottomOf="@+id/textView2"
        datacardview:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/data_snelheid_max"
        android:layout_width="134dp"
        android:layout_height="15dp"
        android:text="hoogte snelheid"
        datacardview:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="1dp"
        datacardview:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        datacardview:layout_constraintTop_toBottomOf="@+id/data_snelheid_gemiddelde" />

    <TextView
        android:id="@+id/aantal"
        android:layout_width="130dp"
        android:layout_height="26dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/Hoogte"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        datacardview:layout_constraintLeft_toLeftOf="parent"
        datacardview:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="128dp"
        android:layout_height="20dp"
        android:text="@string/Snelheid"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        datacardview:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        datacardview:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/Hoogste"
        datacardview:layout_constraintLeft_toLeftOf="parent"
        datacardview:layout_constraintTop_toBottomOf="@+id/aantal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/Gemiddelde"
        datacardview:layout_constraintLeft_toLeftOf="parent"
        datacardview:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/Snelste"
        datacardview:layout_constraintLeft_toLeftOf="parent"
        datacardview:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/Gemiddelde"
        datacardview:layout_constraintLeft_toLeftOf="parent"
        datacardview:layout_constraintTop_toBottomOf="@+id/textView5" />
</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>