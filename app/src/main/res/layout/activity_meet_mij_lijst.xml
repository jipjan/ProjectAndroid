<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.experience.essteling.a3.esstelingexperience.MeetMijLijst">

    <TextView
        android:id="@+id/tv_meet_mij_lijst_metingen"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:text="@string/Meetmij"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167" />

    <Button
        android:id="@+id/btn_meet_mij_lijst_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Buttons"
        android:text="@string/Menu"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/tv_meet_mij_lijst_metingen"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp" />

    <ListView
        android:id="@+id/lv_meet_mij_lijst_lijstProjecten"
        android:layout_width="0dp"
        android:layout_height="394dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_meet_mij_lijst_metingen"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="260dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/esstelinglogo2"
        app:layout_constraintLeft_toRightOf="@+id/btn_meet_mij_lijst_menu"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
