<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.experience.essteling.a3.esstelingexperience">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Menu"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MeetMij"
            android:parentActivityName=".MetingenLijst"
        android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.experience.essteling.a3.esstelingexperience.MeetMijLijst" />
    </activity>

        <activity android:name=".MeetMijLijst"
            android:parentActivityName=".Menu"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.experience.essteling.a3.esstelingexperience.Menu" />
        </activity>

        <activity android:name=".DataAttractieLijst"
            android:parentActivityName=".MetingenLijst"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.experience.essteling.a3.esstelingexperience.MetingenLijst" />
        </activity>


         <activity android:name=".AttractieMetingSpec"
             android:parentActivityName=".MeetMijLijst"
            android:theme="@style/AppTheme"
             android:screenOrientation="portrait">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
                android:value="com.experience.essteling.a3.esstelingexperience.MeetMijLijst" />
          </activity>


        <activity android:name=".MetingenLijst"
            android:parentActivityName=".Menu"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.experience.essteling.a3.esstelingexperience.Menu" />
        </activity>

    </application>

</manifest>